#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/mnt/d/experiments/daily-assistant/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="$NODE_PATH:/mnt/d/experiments/daily-assistant/node_modules/.pnpm/node_modules"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../../../../node_modules/.pnpm/gtts@0.2.1/node_modules/gtts/bin/gtts" "$@"
else
  exec node  "$basedir/../../../../node_modules/.pnpm/gtts@0.2.1/node_modules/gtts/bin/gtts" "$@"
fi
